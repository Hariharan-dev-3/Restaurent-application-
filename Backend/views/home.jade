doctype html
html
  head
    title Restaurent
    link(rel="stylesheet", href="/static/profile/css/Restaurent.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css", integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr", crossorigin="anonymous")
  body
    section#home
      .header
        .title
          button.hamburger(title="menu")
            svg(width="50%", height="30", viewBox="0 0 40 30", xmlns="http://www.w3.org/2000/svg")
              rect(width="40", height="5", fill="black")
              rect(y="12", width="40", height="5", fill="black")
              rect(y="24", width="40", height="5", fill="black")
          p#loginUserName
        nav.navbar
          a#navAdminUsers(href="#adminSection", style="display: none") View Users
          a#navAdminBookings(href="#adminSection", style="display: none") View Bookings
          a#navMenu(href="#menu")
          a#navGallery(href="#gallery")
          a#navBooking(href="#booking")
          a#navAbout(href="#about")
      .box#boxx
        ul.list
          a.sideLinks#loginTag(data-status="false") Login
          a.sideLinks(href="#home") Home
          a.sideLinks(href="#menu") Menu items
          a.sideLinks(href="#gallery") Gallery
          a.sideLinks(href="#booking") Booking
          a.sideLinks#sideAdminUsers(href="#") view Bookings
          a.sideLinks#sideAdminUBookings(href="#adminSection") view Users
      main.contents
        .imageContainer
          p.today Today Offers %
        .pic
          img.delivery(src="/static/profile/Images/deliveryboy.png", alt="")
    section#menu
      select.SelectBtn#selectButton
        option(value="All") All
        option(value="veg") Veg
        option(value="non-veg") Non-Veg
      #items
      .popupScreen#popupScreen
    section#gallery
      #galleryContainer
    section#booking
      h2 Book Your Seats here !..
      br
      #bookContainer
      .bookingPage#bookingPage
      #alertPlaceholder
    section#authendication
      .loginBack
        .title
          h3 LOGIN FORM
          button.cornerClose(onClick="closeLogin()") X
        .mailDiv
          label(for="Email") Email
          input#loginMail(type="text", name="Email")
        .passDiv
          label(for="Password") Password
          input#loginPass(type="password", name="Password")
        button.loginBtn#loginBtn Login
        p New User ? Click below to Register üëáüèª
        a#toRegister(href="#") Register
    section#regAuthendication
      .regBack
        .title
          h3 REGISTRATION FORM
          button.cornerClose(onClick="closeLogin()") X
        .nameDiv
          label(for="username") Name
          input#username(type="text", name="username")
        .mailDiv
          label(for="Email") Email
          input#usermail(type="text", name="Email")
        .passDiv
          label(for="Password") Password
          input#userpassword(type="password", name="Password")
        .passDiv
          label(for="Password") Confirm Password
          input#confirmPassword(type="password", name="Password")
        .regBottom
          button#registerBtn Register
          p Already Registered ? Click below to Login üëáüèª
          a#toLogin(href="") Login
    #loader
      #loadAnimation
    section.about-container#about
      h2 About Us
      p
        | Welcome to 
        strong Spice Haven
        | , where every dish is a celebration of flavor and tradition. Since opening our doors in 2020, we've been committed to serving authentic, handcrafted meals made with love and the freshest ingredients.
      img.about-image(src="/static/profile/Images/interior.jpg", alt="Inside our restaurant")
      .highlight
        h3 üåø Our Philosophy
        p We believe food is more than just sustenance‚Äîit's a story, a memory, a connection. Our chefs blend time-honored recipes with a modern twist to bring you an unforgettable dining experience.
      h4 Meet Our Chef
      p Chef Aarav, the heart of our kitchen, brings over 25 years of culinary mastery. His passion for Indian cuisine and creative flair make every plate a masterpiece.
      img.about-image(src="/static/profile/Images/chef.jpg", alt="Chef Aarav")
      h4 Why Choose Us?
      ul
        li ‚úÖ Locally sourced, fresh ingredients
        li ‚úÖ Vegetarian & vegan-friendly options
        li ‚úÖ Cozy ambiance with live music
        li ‚úÖ Friendly staff and fast service
    section.admin-container#adminSection(style="display: none")
      iframe#adminPageIframe(src="/api/v1/index/adminPage")

    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
